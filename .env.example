# ============================================================================
# TELEGRAM USER CLIENT (для чтения каналов XtremeCase)
# ============================================================================
# Получите на https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+79991234567
# Имя сессии (создастся автоматически при первом запуске)
TELEGRAM_SESSION_NAME=user_session

# ============================================================================
# TELEGRAM BOT (для отправки в целевой канал)
# ============================================================================
BOT_TOKEN=your_bot_token_here
TARGET_CHANNEL_ID=-1009876543210

# ============================================================================
# ИСТОЧНИКИ ДАННЫХ
# ============================================================================

# Включение/выключение источников (true/false)
ENABLE_XTREME_CASE=true
ENABLE_CIFROVOY_RAY=false

# XtremeCase: Telegram канал (читается через user-аккаунт)
# Требуется если ENABLE_XTREME_CASE=true
XTREME_CASE_CHANNEL_ID=-1001234567890
# или username канала: XTREME_CASE_CHANNEL_ID=@channel_name

# CifrovoyRay: Google Sheets
# Требуется если ENABLE_CIFROVOY_RAY=true
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
CIFROVOY_RAY_SPREADSHEET_ID=1abc123def456ghi789
# или URL: https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit

# ============================================================================
# НАСТРОЙКИ ОБРАБОТКИ
# ============================================================================
# Наценки (в рублях)
MARKUP_XTREME_CASE=200
MARKUP_CIFROVOY_RAY=50
MARKUP_DEFAULT=50

# Параметры Excel
PRICE_COLUMN_INDEX=4
HEADER_ROW=5

# ============================================================================
# РАБОЧИЕ ДИРЕКТОРИИ
# ============================================================================
TEMP_DIR=./temp
OUTPUT_DIR=./processed_files

# ============================================================================
# ЛОГИРОВАНИЕ
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=bot.log

# ============================================================================
# ИНТЕРВАЛЫ ПРОВЕРКИ
# ============================================================================
# Как часто проверять Telegram канал (в секундах)
# 10800 секунд = 3 часа
TELEGRAM_CHECK_INTERVAL=10800

# Как часто проверять Google Sheets (в секундах)
# 300 секунд = 5 минут
SHEETS_CHECK_INTERVAL=300

# ============================================================================
# ДОПОЛНИТЕЛЬНЫЕ ОПЦИИ
# ============================================================================
# Обрабатывать ли последние файлы при запуске (true/false)
PROCESS_RECENT_ON_START=false
# Сколько последних сообщений проверить (если PROCESS_RECENT_ON_START=true)
PROCESS_RECENT_LIMIT=10
# Обработайте последние файлы:
PROCESS_RECENT_ON_START=true
